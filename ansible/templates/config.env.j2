FLASK_ENV="{{ noticast_web.stage }}"
FLASK_APP="noticast_web"

FLASK_SECRET_KEY="{{ noticast_web.secret_key }}"
FLASK_DEBUG="{{ noticast_web.stage == "development" }}"

FLASK_SQLALCHEMY_DATABASE_URI="{{ noticast_web.sqlalchemy_db_uri }}"
FLASK_SQLALCHEMY_TRACK_MODIFICATIONS="true"

AWS_DEFAULT_REGION="{{ noticast_web.aws[0].region }}"
AWS_ACCESS_KEY_ID="{{ noticast_web.aws[0].access_key }}"
AWS_SECRET_ACCESS_KEY="{{ noticast_web.aws[0].secret_key }}"

SENTRY_DSN="{{ noticast_web.sentry_dsn }}"
